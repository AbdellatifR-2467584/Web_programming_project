<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= user.username %>
    </title>
    <link rel="icon" type="image/png" href="/resources/logo/Logo_cirkel.png">
    <link rel="stylesheet" href="/css/user.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="/js/user.js" defer></script>
</head>

<body>
    <div class="layout">
        <nav class="sidebar-container">
            <%- include('partials/sidebar') %>
        </nav>

        <main class="mainarea">
            <section class="userInfo">
                <div>
                    <img id="profilepicture"
                        src="/resources/profilepictures/<%= user.profile_picture || 'default.png' %>"
                        alt="profilepicture" title="Klik om profielfoto te wijzigen">
                    <% if (locals.isOwner) { %>
                        <input type="file" id="pfpInput" accept="image/*">
                        <% } %>
                </div>
                <div id="username">
                    <%= user.username %>
                </div>
            </section>

            <section class="postsByUser">
                <h2>Posts</h2>
                <div class="postsContainer">
                    <% posts.forEach(post=> { %>
                        <article class="postItem">
                            <a href="/post/<%= post.id %>">
                                <img src="/<%= post.image_path %>" alt="post <%= post.id %>">
                            </a>
                            <% if (locals.isOwner || locals.isMod) { %>
                                <div class="postButtons">
                                    <% if (locals.isOwner) { %>
                                        <form action="/post/<%= post.id %>/edit" method="GET" class="editForm">
                                            <button type="submit" class="post-button" title="Bewerken">
                                                <i class="bi bi-pencil-fill"></i>
                                            </button>
                                        </form>
                                        <% } %>
                                            <form action="/post/<%= post.id %>/delete" method="POST" class="deleteForm">
                                                <button type="submit"
                                                    onclick="return confirm('Weet je zeker dat je deze post wilt verwijderen?')">
                                                    <i class="bi bi-trash-fill"></i>
                                                </button>
                                            </form>
                                </div>
                                <% } %>
                        </article>
                        <% }) %>
                </div>
            </section>

            <section class="postsByUser">
                <h2>Favorieten</h2>
                <div class="postsContainer">
                    <% if (locals.favoritePosts && favoritePosts.length> 0) { %>
                        <% favoritePosts.forEach(post=> { %>
                            <article class="postItem">
                                <a href="/post/<%= post.id %>">
                                    <img src="/<%= post.image_path %>" alt="favoriet <%= post.id %>">
                                </a>
                            </article>
                            <% }) %>
                                <% } else { %>
                                    <p style="padding-left: 20px;">Nog geen favorieten opgeslagen.</p>
                                    <% } %>
                </div>
            </section>

            <% if (locals.isOwner) { %>
                <section class="instellingen">
                    <h2>Instellingen</h2>
                    <ul class="settings-list">
                        <li class="settings-item">
                            <span><i class="bi bi-moon-stars-fill"></i> Dark Mode</span>
                            <button id="darkmodeSwitch"><i class="bi bi-moon-fill"></i></button>
                        </li>
                        <li class="settings-item">
                            <span><i class="bi bi-pencil-fill"></i> Wijzig gebruikersnaam</span>
                            <button id="changeUsernameBtn">Bewerken</button>
                        </li>
                        <li class="settings-item">
                            <span><i class="bi bi-lock-fill"></i> Wijzig wachtwoord</span>
                            <button id="changePasswordBtn">Bewerken</button>
                        </li>
                        <li class="settings-item">
                            <span><i class="bi bi-box-arrow-right"></i> Uitloggen</span>
                            <button onclick="location.href='/logout'" class="logout-btn">Uitloggen</button>
                        </li>
                    </ul>
                </section>
                <% } %>

                    <!-- Modals -->
                    <% if (locals.isOwner) { %>
                        <div id="changeUsernameModal" class="modal">
                            <div class="modal-content">
                                <span class="close">&times;</span>
                                <h3>Wijzig gebruikersnaam</h3>
                                <form id="changeUsernameForm">
                                    <input type="text" name="newUsername" placeholder="Nieuwe gebruikersnaam" required>
                                    <button type="submit">Opslaan</button>
                                </form>
                                <div id="usernameError" class="error-message"></div>
                            </div>
                        </div>

                        <div id="changePasswordModal" class="modal">
                            <div class="modal-content">
                                <span class="close">&times;</span>
                                <h3>Wijzig wachtwoord</h3>
                                <form id="changePasswordForm">
                                    <input type="password" name="currentPassword" placeholder="Huidig wachtwoord"
                                        required>
                                    <input type="password" name="newPassword" placeholder="Nieuw wachtwoord" required>
                                    <input type="password" name="confirmPassword"
                                        placeholder="Bevestig nieuw wachtwoord" required>
                                    <button type="submit">Opslaan</button>
                                </form>
                                <div id="passwordError" class="error-message"></div>
                            </div>
                        </div>

                        <div id="changeProfilePictureModal" class="modal">
                            <div class="modal-content">
                                <span class="close">&times;</span>
                                <h3>Wijzig profielfoto</h3>
                                <div class="pfp-modal-preview-container">
                                    <img id="pfpPreview" src="" alt="Voorbeeld">
                                </div>
                                <div class="modal-buttons-container">
                                    <button id="savePfpBtn">Opslaan</button>
                                    <button id="cancelPfpBtn">Annuleren</button>
                                </div>
                                <div id="pfpError" class="error-message centered"></div>
                            </div>
                        </div>
                        <% } %>

        </main>
    </div>
</body>


</html>